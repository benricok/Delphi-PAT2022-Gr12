unit util_u;

interface

uses SysUtils, Classes, Vcl.Forms, Vcl.Dialogs, System.Variants;

type
  Tsc = set of char;
  TUser = record
    username : string[20];
    fullname : string[25];
    surname : string[25];
    gender : char;
    email : string[30];
    privilege : string[5];
    enabled : boolean;
    cellPhone : string[11];
  end;
  TEventType = (error, info, warning);
  Var
    scInvalidNames : Tsc = [#33..#44, #46..#64, #91..#96, #123..#126];
                           {!  to , ;  . to @ ;  [ to ' ;  {  to  " }

implementation

end.
